<p id="notice"><%= notice %></p>

<h1>Listing Scaffolds</h1>

<table>
  <thead>
    <tr>
      <th>Posts</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scaffolds.each do |scaffold| %>
      <tr>
        <td><%= scaffold.posts %></td>
        <td><%= scaffold.title %></td>
        <td><%= scaffold.description %></td>
        <td><%= link_to 'Show', scaffold %></td>
        <td><%= link_to 'Edit', edit_scaffold_path(scaffold) %></td>
        <td><%= link_to 'Destroy', scaffold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

